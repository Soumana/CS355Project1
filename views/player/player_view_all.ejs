<!DOCTYPE html>
<html>
<head>
    <title>Player - View All</title>
</head>
    <body>
        <h1>Players</h1>
        <a href="/player/add">Add New Player</a> <br /> <br />

        <table border="1">
            <tr>
                <th>ID</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Team Name</th>
                <th>Jersey Number</th>
                <th>Position</th>
                <th>Height</th>
                <th>Weight</th>
                <th>Actions</th>
            </tr>
            <% for(var i = 0; i < players.length; i++) { %>
            <tr>
                <td>
                    <%= players[i].player_id %>
                    </a>

                </td>

                <td>
                    <%= players[i].first_name %>
                    </a>

                </td>

                <td>
                    <%= players[i].last_name %>
                    </a>
                </td>
                <td>
                    <%= players[i].player_team %>
                    </a>
                </td>

                <td>
                    <%= players[i].jersey_number %>
                    </a>
                </td>

                <td>
                    <%= players[i].position %>
                    </a>
                </td>

                <td>
                    <%= players[i].height %>
                    </a>
                </td>

                <td>
                    <%= players[i].weight %>
                    </a>
                </td>


                <td>
                    <a href='/player/edit/?player_id=<%= players[i].player_id %>'>
                        Edit

                        <a href="/player/delete?player_id=<%= players[i].player_id %>">Delete</a>
                    </a>
                </td>

            </tr>
            <% } %>
        </table>
        <% if(locals.was_successful_delete) { %>
        <div>
            <p>Player successfully deleted</p>
        </div>
        <% } %>
    </body>
</html>